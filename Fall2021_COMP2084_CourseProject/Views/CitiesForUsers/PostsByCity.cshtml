@model IEnumerable<Fall2021_COMP2084_CourseProject.Models.Post>

@{ ViewData["Title"] = "Posts By City";}

<h1>Posts</h1>


@*An user must logs in*@
@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create" class="link-color-change-dark">Create a New Post</a>

        @*If the user is the administrator, the following link is also visible*@
        @if (User.IsInRole("Administrator"))
        {
            <a asp-area="" asp-controller="Cities" asp-action="Index" class="ml-4 link-color-change-dark">Need another city?</a>
        }
    </p>
}


<table class="table sortable table-hover table-sm">
    <thead>
        <tr>
            <th class="align-middle text-center">
                <a href="#">@Html.DisplayNameFor(model => model.PostedDate)</a>
            </th>
            <th class="align-middle text-center">
                <a href="#">@Html.DisplayNameFor(model => model.City)</a>
            </th>
            <th class="align-middle text-center">
                <a href="#">@Html.DisplayNameFor(model => model.Rent)</a>
            </th>
            <th class="align-middle text-center">
                @Html.DisplayNameFor(model => model.Description)
            </th>

            <th class="sortable_nosort">
                @*@Html.DisplayNameFor(model => model.Photo)*@
            </th>

            <th class="align-middle text-center sortable_nosort">
                @Html.DisplayNameFor(model => model.PhoneOnPost)
            </th>
            <th class="align-middle text-center sortable_nosort">
                @Html.DisplayNameFor(model => model.EmailOnPost)
            </th>

            @*<th class="align-middle text-center">
                    @Html.DisplayNameFor(model => model.UserId)
                </th>*@

            <th class="sortable_nosort"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.PostedDate)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.City.Name)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Rent)
                </td>
                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="text-center">
                    @if (item.Photo != null)
                    {
                        <img src="~/img/posts/@item.Photo" alt="Room photo" class="photo-review-img" />
                    }
                </td>
                <td class="text-left">
                    @Html.DisplayFor(modelItem => item.PhoneOnPost)
                </td>
                <td class="text-left email-color">
                    @Html.DisplayFor(modelItem => item.EmailOnPost, new { @class = "email-color" })
                </td>

                @*<td class="text-center">
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>*@

            <td class="text-center align-middle">

                @*Only the administrator or the author can edit/delete the post*@
                @if (User.IsInRole("Administrator") || User.Identity.Name == item.UserId)
                {
                    <a asp-controller="Posts" asp-action="Edit" asp-route-id="@item.Id" class="link-color-change-dark" data-toggle="tooltip" title="Edit">
                        @*Icon Source   https://icons.getbootstrap.com/*@
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                        </svg>
                    </a>
                }
                <a asp-controller="Posts" asp-action="Details" asp-route-id="@item.Id" class="link-color-change-dark" data-toggle="tooltip" title="Details">
                    @*Icon Source   https://icons.getbootstrap.com/*@
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-book" viewBox="0 0 16 16">
                        <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z" />
                    </svg>
                </a>
                @if (User.IsInRole("Administrator") || User.Identity.Name == item.UserId)
                {
                    <a asp-controller="Posts" asp-action="Delete" asp-route-id="@item.Id" class="link-color-change-dark" data-toggle="tooltip" title="Delete">
                        @*Icon Source   https://icons.getbootstrap.com/*@
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                        </svg>
                    </a>
                }
            </td>
            </tr>
        }
    </tbody>
</table>
<div class="d-flex ">
    <a asp-area="" asp-controller="CitiesForUsers" asp-action="Index" class="d-flex justify-content-center nav-link link-color-change-dark" data-toggle="tooltip" title="Back to Select City">
        @*Icon Source   https://icons.getbootstrap.com/*@
        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-arrow-return-right" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1.5 1.5A.5.5 0 0 0 1 2v4.8a2.5 2.5 0 0 0 2.5 2.5h9.793l-3.347 3.346a.5.5 0 0 0 .708.708l4.2-4.2a.5.5 0 0 0 0-.708l-4-4a.5.5 0 0 0-.708.708L13.293 8.3H3.5A1.5 1.5 0 0 1 2 6.8V2a.5.5 0 0 0-.5-.5z" />
        </svg>
        Back to Select City
    </a>

    <a asp-area="" asp-controller="Posts" asp-action="Index" class="d-flex justify-content-center nav-link link-color-change-dark" data-toggle="tooltip" title="Back to All Posts">
        @*Icon Source   https://icons.getbootstrap.com/*@
        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-arrow-return-right" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1.5 1.5A.5.5 0 0 0 1 2v4.8a2.5 2.5 0 0 0 2.5 2.5h9.793l-3.347 3.346a.5.5 0 0 0 .708.708l4.2-4.2a.5.5 0 0 0 0-.708l-4-4a.5.5 0 0 0-.708.708L13.293 8.3H3.5A1.5 1.5 0 0 1 2 6.8V2a.5.5 0 0 0-.5-.5z" />
        </svg>
        Back to All Posts
    </a>

</div>
