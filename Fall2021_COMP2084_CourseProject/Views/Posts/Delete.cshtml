@model Fall2021_COMP2084_CourseProject.Models.Post

@{
    ViewData["Title"] = "Delete the post";
}

<h1>Delete the post</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PostedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rent)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
            @if (Model.Photo != null)
            {
                <img src="~/img/posts/@Model.Photo" alt="Room photo" class="photo-review-img" />
            }

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneOnPost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneOnPost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmailOnPost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmailOnPost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <p></p>
        <a asp-action="Index" class="link-color-change-dark" data-toggle="tooltip" title="Cancel">
            @*Icon Source   https://icons.getbootstrap.com/*@
            <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-arrow-return-right" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M1.5 1.5A.5.5 0 0 0 1 2v4.8a2.5 2.5 0 0 0 2.5 2.5h9.793l-3.347 3.346a.5.5 0 0 0 .708.708l4.2-4.2a.5.5 0 0 0 0-.708l-4-4a.5.5 0 0 0-.708.708L13.293 8.3H3.5A1.5 1.5 0 0 1 2 6.8V2a.5.5 0 0 0-.5-.5z" />
            </svg>
            Cancel
        </a>

    </form>
</div>
